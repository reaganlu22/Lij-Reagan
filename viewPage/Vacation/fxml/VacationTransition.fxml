<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewPage.Vacation.fxml.VacationTransitionController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="303.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="600.0" fitWidth="400.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/mainBackgro.png" />
               </image>
            </ImageView>
            <Label layoutX="23.0" layoutY="69.0" text="American Travel Bucket List">
               <font>
                  <Font name="Garamond Bold" size="29.0" />
               </font>
            </Label>
            <Label fx:id="displayText" layoutX="32.0" layoutY="152.0" prefHeight="241.0" prefWidth="336.0" text="Temporary Text" wrapText="true">
               <font>
                  <Font name="Garamond Bold" size="23.0" />
               </font>
            </Label>
            <Button fx:id="selectBtn" blendMode="MULTIPLY" layoutX="218.0" layoutY="458.0" mnemonicParsing="false" onAction="#selectDestination" prefHeight="43.0" prefWidth="168.0" text="Select Destination">
               <font>
                  <Font name="Garamond Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="saveBtn" blendMode="MULTIPLY" layoutX="14.0" layoutY="458.0" mnemonicParsing="false" onAction="#save" prefHeight="43.0" prefWidth="168.0" text="Save &amp; Exit">
               <font>
                  <Font name="Garamond Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
